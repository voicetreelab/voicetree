{
  "permissions": {
    "allow": [
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "WebFetch(domain:docs.anthropic.com)",
      "Bash(chmod:*)",
      "Bash(rm:*)",
      "Bash(./tools/test_color_flow.sh:*)",
      "Bash(python3 tools/add_new_node.py:*)",
      "Bash(python*/tools/add_new_node.py:*)"
    ]
  },
  "enabledMcpjsonServers": [
    "zen"
  ],

"hooks" : {
  "UserPromptSubmit": [    {
    "hooks": [
      {
        "type": "command",
        "command": "python3 ~/Library/Application\\ Support/voicetree-webapp/tools/hooks/tree_update_reminder.py"
      }
    ]
  }
  ],
  "Stop": [
    {
      "description": "Summary reminder to check created nodes",
      "hooks": [
        {
          "type": "command",
          "command": "python3 ~/Library/Application\\ Support/voicetree-webapp/tools/hooks/tree_update_reminder.py"
        }
      ]
    }
  ]
}
}