{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "..",
    "strict": true,
    "strictNullChecks": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./e2e-tests/*"],
      "@e2e/*": ["./e2e-tests/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
