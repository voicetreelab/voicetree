{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.test.tsbuildinfo",
    "paths": {
      "@/*": ["./src/*"],
      "@wasm/*": ["./tidy/wasm_dist/*"],
      "@test/*": ["./e2e-tests/*"],
      "@e2e/*": ["./e2e-tests/*"]
    }
  },
  "include": [
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "e2e-tests/**/*.ts",
    "e2e-tests/**/*.tsx"
  ],
  "exclude": [
    "e2e-tests/electron/**"
  ]
}
