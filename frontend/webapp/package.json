{
  "name": "voicetree-webapp",
  "productName": "Voicetree",
  "description": "Transform voice into navigable concept graphs",
  "author": "Manu Masson",
  "private": true,
  "version": "1.10.5",
  "type": "module",
  "main": "dist-electron/main/index.js",
  "scripts": {
    "lint": "eslint .",
    "check": "eslint . && tsc --noEmit",
    "postinstall": "electron-builder install-app-deps",
    "test": "vitest run ; npm run test:smoke ; npm run test:browser",
    "test:listen": "vitest",
    "test:smoke": "electron-vite build && npx electron-rebuild && playwright test --config=playwright-electron.config.ts e2e-tests/electron/critical_e2e_verification_tests/electron-smoke-test.spec.ts",
    "test:e2e": "electron-vite build && npx electron-rebuild && playwright test --config=playwright-electron.config.ts e2e-tests/electron/critical_e2e_verification_tests",
    "test:browser": "playwright test e2e-tests/playwright-browser/critical_for_verification",
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:test": "tsc -b && vite build && npm run test:smoke",
    "electron:watch": "npx kill-port 3000 2>/dev/null || true && electron-vite dev --watch",
    "electron": "npx kill-port 3000 2>/dev/null || true && electron-vite dev",
    "electron:prod": "electron-vite build && npx electron-rebuild && electron .",
    "electron:persist-state": "VOICETREE_PERSIST_STATE=1 electron-vite build && VOICETREE_PERSIST_STATE=1 electron .",
    "electron:build": "electron-vite build",
    "electron:pack": "electron-vite build && electron-builder",
    "electron:dist": "export CSC_IDENTITY_AUTO_DISCOVERY=false && electron-vite build && electron-builder --mac --config -c.mac.identity=null --publish=never",
    "electron:dist-and-publish": "export $(cat .env | grep -v '^#' | xargs) && electron-vite build && electron-builder --mac --publish=always",
    "mcp": "npx tsx src/shell/edge/main/mcp-server/index.ts"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.20.0",
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-java": "^6.0.2",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-yaml": "^6.1.2",
    "@codemirror/language-data": "^6.5.2",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.6",
    "@markdoc/markdoc": "^0.5.4",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-slot": "^1.2.3",
    "@replit/codemirror-vim": "^6.3.0",
    "@soniox/speech-to-text-web": "^1.2.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/cytoscape": "^3.21.9",
    "@types/lodash.debounce": "^4.0.9",
    "@xterm/addon-clipboard": "^0.2.0-beta.120",
    "@xterm/addon-fit": "^0.11.0-beta.136",
    "@xterm/addon-search": "^0.16.0-beta.136",
    "@xterm/addon-unicode11": "^0.9.0-beta.136",
    "@xterm/addon-webgl": "^0.19.0-beta.136",
    "@xterm/xterm": "^5.6.0-beta.136",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "codemirror": "^6.0.2",
    "codemirror-rich-markdoc": "^0.0.2",
    "cytoscape": "^3.33.1",
    "cytoscape-cola": "^2.5.1",
    "cytoscape-cxtmenu": "^3.5.0",
    "cytoscape-layout-utilities": "^1.1.1",
    "cytoscape-navigator": "^2.0.2",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "fix-path": "^5.0.0",
    "fp-ts": "^2.16.11",
    "gray-matter": "^4.0.3",
    "lodash.debounce": "^4.0.8",
    "lucide": "^0.554.0",
    "lucide-react": "^0.544.0",
    "mermaid": "^11.12.0",
    "ninja-keys": "^1.2.2",
    "node-pty": "^1.1.0",
    "normalize-path": "^3.0.0",
    "posthog-js": "^1.290.0",
    "re-resizable": "^6.11.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-draggable": "^4.5.0",
    "recharts": "^3.6.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.55.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/express": "^5.0.5",
    "@types/node": "^24.5.2",
    "@types/normalize-path": "^3.0.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^3.2.4",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.0",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "electron-vite": "^4.0.1",
    "eslint": "^9.30.1",
    "eslint-plugin-functional": "^9.0.2",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^27.0.0",
    "msw": "^2.11.3",
    "playwright": "^1.55.1",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.voicetree.webapp",
    "productName": "Voicetree",
    "publish": {
      "provider": "github",
      "owner": "voicetreelab",
      "repo": "voicetree",
      "releaseType": "release"
    },
    "directories": {
      "output": "../../out/electron"
    },
    "afterPack": "./scripts/after-pack.cjs",
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "node_modules/**/*",
      "!node_modules/**/.venv/**",
      "!node_modules/**/.venv*/**",
      "!node_modules/**/venv/**",
      "build/icon.png",
      "build/icon.icns"
    ],
    "extraResources": [
      {
        "from": "../../out/resources/server",
        "to": "server"
      },
      {
        "from": "../../out/resources/tools",
        "to": "tools"
      },
      {
        "from": "../../out/resources/backend",
        "to": "backend"
      },
      {
        "from": "public/onboarding",
        "to": "onboarding"
      }
    ],
    "dmg": {
      "artifactName": "voicetree-${arch}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": true,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "notarize": true
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png"
    }
  }
}
