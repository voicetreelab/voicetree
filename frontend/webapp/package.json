{
  "name": "voicetree-webapp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/electron.cjs",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:test": "vite build",
    "lint": "eslint .",
    "check": "eslint . && tsc --noEmit",
    "preview": "vite preview",
    "test": "vitest --no-isolate run && playwright test tests/e2e/full-electron/electron-sys-e2e.spec.ts --config=playwright-electron.config.ts",
    "test:parallel": "vitest && playwright test",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui --pool threads --poolOptions.threads.maxThreads 2",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headless": "xvfb-run -a playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:electron": "npm run build:test && playwright test --config=playwright-electron.config.ts",
    "test:browser": "playwright test tests/e2e/isolated-with-harness/file-to-graph-pipeline-behavioral.spec.ts",
    "electron": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && NODE_ENV=development electron .\"",
    "electron:prod": "electron .",
    "electron:test": "NODE_ENV=development TEST_FILE_WATCHER=1 electron .",
    "electron:build": "npm run build && electron .",
    "electron:pack": "npm run build && electron-builder",
    "electron:dist": "npm run build && electron-builder --publish=never"
  },
  "dependencies": {
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-navigation-menu": "^1.2.14",
    "@radix-ui/react-slot": "^1.2.3",
    "@soniox/speech-to-text-web": "^1.2.0",
    "@tailwindcss/vite": "^4.1.11",
    "@types/cytoscape": "^3.21.9",
    "@types/lodash.debounce": "^4.0.9",
    "@uiw/react-md-editor": "^4.0.8",
    "@xterm/xterm": "^5.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cytoscape": "^3.33.1",
    "cytoscape-cola": "^2.5.1",
    "cytoscape-cxtmenu": "^3.5.0",
    "lodash.debounce": "^4.0.8",
    "lucide-react": "^0.544.0",
    "mermaid": "^11.12.0",
    "node-pty": "^1.0.0",
    "re-resizable": "^6.11.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-draggable": "^4.5.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.55.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/ui": "^3.2.4",
    "chokidar": "^4.0.3",
    "concurrently": "^9.1.0",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^27.0.0",
    "msw": "^2.11.3",
    "playwright": "^1.55.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.4",
    "vitest": "^3.2.4",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.voicetree.webapp",
    "productName": "VoiceTree",
    "directories": {
      "output": "../../dist/electron"
    },
    "files": [
      "dist/**/*",
      "electron.cjs",
      "preload.js",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../../dist/resources/server",
        "to": "server"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
