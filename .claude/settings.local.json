{
  "extraKnownMarketplaces": {
    "voicetree-plugins": {
      "source": {
        "source": "directory",
        "path": "./.claude/plugins"
      }
    }
  },
  "enabledPlugins": {
    "playwright-debug@voicetree-plugins": true
  },
  "permissions": {
    "allow": [

    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR/frontend/webapp/ && node .claude/hooks/quality-check.cjs"
          }
        ]
      }
    ]
  }
}
